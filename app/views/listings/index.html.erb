<p id="notice"><%= notice %></p>

<% Category.all.each do |category| %>
  <a href=<%="/categories/#{category.id}"%> class="btn btn-category"><%=category.name%></a>
<% end %>

<h1>Listings</h1>
<a href=<%=new_listing_path%> class="btn btn-primary">Create Listing</a>

<div class ="row">
  <% @listings.each do |listing| %>
    <div class="col-3" style="padding: 10px;">
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <h5 class="card-title"><%= listing.item_name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= listing.category.name %></h6>
          <div class="card-img">
            <img src="<%= url_for(listing.listing_img) %>" class="card-img-top" alt="...">
          </div>
          <p class="card-text"><%= truncate(listing.description, :length => 100) %></p>
          <a href=<%="#{listing_path(listing)}"%> class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
  <% end %>
</div>


<br>

