<p id="notice"><%= notice %></p>

<div style="width:50%; margin:auto">
  <a href=<%="#{users_path}"%> class="btn btn-primary">Return to Users</a>
  
  <h1><strong>Username: </strong><%= @user.username %></h1>
  <%if logged_in? && @user.id == current_user.id%>

    <a href=<%="#{edit_user_path(@user)}"%> class="btn btn-info">Edit Profile</a>
    <a data-method="delete" href=<%="#{@user}"%> class="btn btn-danger">Delete Account</a>
    <p><strong>Name: </strong><%= @user.full_name %></p>
    <p><strong>Email: </strong><%= @user.email %></p>

  <%end%>
  <div class="container-img">
    <img src = "<%= url_for(@user.user_img) %>" class="container-img"/>
  </div>
</div>

<div>
  <strong>User Listings:</strong>

  <div class ="row">
    <% @user.listings.each do |listing| %>
      <div class="col-3" style="padding: 10px;">
        <div class="card" style="width: 100%;">
          <div class="card-body">
            <h5 class="card-title"><%= listing.item_name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= listing.category.name %></h6>
            <div class="card-img">
              <img src="<%= url_for(listing.listing_img) %>" class="card-img-top" alt="...">
            </div>
            <p class="card-text"><%= truncate(listing.description, :length => 100) %></p>
            <a href=<%="#{listing_path(listing)}"%> class="btn btn-primary">View</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


